/* Este arquivo é para estilos personalizados que complementam o Tailwind CSS.
    As classes do Tailwind são usadas para a maior parte do layout e cores,
    enquanto este arquivo gerencia animações e comportamentos que não são
    nativos do framework.
*/

/* Animação de entrada para os elementos da seção principal */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Aplica a animação com um atraso */
.animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
}

.animate-fade-in-delay {
    animation: fadeIn 0.8s ease-out 0.3s forwards;
    opacity: 0; /* Começa invisível para a animação */
}

.animate-fade-in-delay-2 {
    animation: fadeIn 0.8s ease-out 0.6s forwards;
    opacity: 0; /* Começa invisível para a animação */
}

/* Efeito de rolagem suave para navegação interna */
html {
    scroll-behavior: smooth;
}

/* Estilo para links de projeto com um efeito sutil de sublinhado */
.project-link:hover {
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-color: #4ade80; /* Cor verde-água */
}

/* Efeito de hover para os cards de projeto */
.project-card:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transform: translateY(-5px);
}

/* Estilo para o menu mobile, garantindo uma transição suave */
#mobile-menu {
    transition: all 0.3s ease-in-out;
}

#mobile-menu.hidden {
    max-height: 0;
    overflow: hidden;
}

#mobile-menu:not(.hidden) {
    max-height: 200px;
}
